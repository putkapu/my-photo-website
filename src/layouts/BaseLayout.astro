---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import '../styles/global.css'

interface Props {
  title: string
  description?: string
}

const { title, description = "Ruan Putka - Software engineer and UX designer based in SÃ£o Paulo, Brazil." } = Astro.props
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta name="author" content="Ruan Putka">
  
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content="https://ruanputka.com.br/photos/1.jpg">
  <meta property="og:url" content="https://ruanputka.com.br">
  <meta property="og:type" content="website">
  
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@putkapu">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content="https://ruanputka.com.br/photos/1.jpg">
  
  <link rel="icon" href="/icons/icon-11.png">
  <link rel="canonical" href="https://ruanputka.com.br">
  <link rel="alternate" type="application/rss+xml" title="Ruan Putka RSS Feed" href="/rss.xml">
</head>
<body>
  <Header />
  <main>
    <div class="container">
      <slot />
    </div>
  </main>
  <Footer />
</body>
</html>
