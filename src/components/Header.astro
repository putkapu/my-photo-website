---
const currentPath = Astro.url.pathname
---

<header>
  <div class="header-inner container">
    <a href="/" class="site-title handwriting">Ruan</a>
    <nav>
      <a href="/" class:list={[{ active: currentPath === '/' }]}>Posts</a>
      <a href="/about" class:list={[{ active: currentPath === '/about' }]}>About</a>
      <a href="/fotos" class:list={[{ active: currentPath === '/fotos' }]}>Fotos</a>
    </nav>
  </div>
</header>

<style>
  header {
    padding: 2rem 0;
    border-bottom: 1px solid var(--border-color);
  }

  .header-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title {
    font-size: 2.2rem;
    color: var(--primary-text);
    text-decoration: none;
  }

  .site-title:hover {
    color: var(--accent-color);
  }

  nav {
    display: flex;
    gap: 2rem;
  }

  nav a {
    font-size: 0.95rem;
    color: var(--secondary-text);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  nav a:hover,
  nav a.active {
    color: var(--primary-text);
  }

  @media (max-width: 640px) {
    .header-inner {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    nav {
      gap: 1.5rem;
    }
  }
</style>
